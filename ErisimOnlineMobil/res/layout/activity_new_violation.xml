<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.google.android.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:apiKey="0rekEy2Uf1apelnDDyHNOVXQap3grGPBe7Jxqzg"
        android:clickable="true" />
    
     <TextView
            android:id="@+id/bulunduguAdres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:layout_centerHorizontal="true"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.20"
        android:gravity="left" >

        <EditText
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="Engel Başlığı"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/titleText"
            android:ems="10"
            android:hint="Notlar"
            android:inputType="textPersonName"
            android:singleLine="false" />

        <TextView
            android:id="@+id/filePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/noteText"
            android:text="Kategori"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Spinner
            android:id="@+id/disabilitySpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/noteText"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/textView1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Kaydet" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/disabilitySpin"
            android:layout_centerVertical="true"
            android:text="Engel Degeri"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/AVValspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AVValspinner03"
            android:layout_alignBaseline="@+id/TextView02"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/disabilitySpin"
            android:layout_toRightOf="@+id/TextView02"
            android:visibility="gone" />

        <EditText
            android:id="@+id/AVValeditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView02"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView02"
            android:ems="10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView02"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/AVValspinner03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AVValspinner04"
            android:layout_alignBaseline="@+id/TextView03"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView03"
            android:visibility="gone" />

        <EditText
            android:id="@+id/AVValeditText03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AVValspinner04"
            android:layout_alignBaseline="@+id/TextView03"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView03"
            android:ems="10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView03"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/AVValspinner04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView04"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView04"
            android:visibility="gone" />

        <EditText
            android:id="@+id/AVValeditText04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView04"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/TextView04"
            android:ems="10"
            android:visibility="gone" />

        <Button
            android:id="@+id/photoButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignParentLeft="true"
            android:text="Resim Çek" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/button1"
            android:layout_toRightOf="@+id/uploadButton"
            android:layout_below="@+id/AVValspinner04"
            android:src="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/uploadButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_toRightOf="@+id/photoButton"
            android:text="Galeriden Seç" />
    </RelativeLayout>

</LinearLayout>
